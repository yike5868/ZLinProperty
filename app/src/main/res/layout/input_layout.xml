<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@drawable/radius_drawable_bg"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.zlin.property.view.FuTextView
                android:textColor="@color/bg_black"
                android:text="用户名："
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.zlin.property.view.FuEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:lines="1"
                android:text="zhang"
                android:singleLine="true"
                android:hint="账号/用户名/邮箱"
                android:textColorHint="@color/bg_black"
                android:textColor="@color/bg_black"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#eeeeee" />

        <LinearLayout
            android:id="@+id/input_layout_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.zlin.property.view.FuTextView
                android:textColor="@color/bg_black"
                android:text="密码："
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.zlin.property.view.FuEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:hint=""
                android:lines="1"
                android:text="123456"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:inputType="textPassword"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#eeeeee" />
        <LinearLayout
            android:id="@+id/input_layout_rpsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <com.zlin.property.view.FuTextView
                android:textColor="@color/bg_black"
                android:text="确认密码："
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.zlin.property.view.FuEditText
                android:id="@+id/et_rpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:inputType="textPassword"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#eeeeee" />
        <LinearLayout
            android:id="@+id/input_layout_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <com.zlin.property.view.FuTextView
                android:textColor="@color/bg_black"
                android:text="真实姓名："
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.zlin.property.view.FuEditText
                android:id="@+id/et_realName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#eeeeee" />
        <LinearLayout
            android:id="@+id/input_layout_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal" >

            <com.zlin.property.view.FuTextView
                android:textColor="@color/bg_black"
                android:text="房间："
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <com.zlin.property.view.FuTextView
                android:id="@+id/tv_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="#00000000"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:padding="5dip"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>