<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="match_parent">

    <com.zlin.property.view.FuImageView
        android:id="@+id/iv_head"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.zlin.property.view.FuTextView
        android:id="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_black"
        android:textSize="15dp"
        android:text="姓名：" />

    <com.zlin.property.view.FuTextView
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/bg_black"
        android:textSize="15dp"
        android:text="性别：" />

    <com.zlin.property.view.FuTextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sex"
        android:layout_marginTop="10dp"
        android:textColor="@color/bg_black"
        android:textSize="15dp"
        android:text="房间：" />

    <LinearLayout
        android:id="@+id/ll_title"
        app:layout_constraintCenterX_toCenterX="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_room"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zlin.property.view.FuButton
            android:text="未支付"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/bg_black"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_content_click"
            android:layout_height="40dp" />
        <com.zlin.property.view.FuButton
            android:text="已支付"
            android:textColor="@color/bg_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_content_click"
            android:layout_height="40dp" />
    </LinearLayout>
    <com.xlibs.xrv.view.XRecyclerView
        android:id="@+id/xr_body"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        />

</android.support.constraint.ConstraintLayout>